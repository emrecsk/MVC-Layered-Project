@model IEnumerable<EntityLayer.Concrete.Category>
@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string color = "success";
}

<h2>AdminCategoryList</h2>

<!DOCTYPE html>

<html>
<body class="hold-transition sidebar-mini">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Category List</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Category Name

                            </th>

                            <th style="width: 30%">

                                Active Authors

                            </th>

                            <th>

                                Category Bar

                            </th>

                            <th style="width: 8%" class="text-center">

                                Status

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.CategoryID
                                </td>
                                <td>
                                    @item.CategoryName
                                </td>

                                <td>

                                    <ul class="list-inline">

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar.png">

                                        </li>

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar2.png">

                                        </li>

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar3.png">

                                        </li>

                                    </ul>

                                </td>

                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">

                                        </div>

                                    </div>

                                    <small>

                                        57% Complete

                                    </small>

                                </td>
                                @if (item.CategoryStatus == false)
                                {
                                    color = "danger";
                                }
                                <td class="project-state">

                                    <span class="badge badge-@color">@item.CategoryStatus</span>

                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" href="/Blog/BlogByCaregory/@item.CategoryID">

                                        <i class="fas fa-folder">

                                        </i>

                                        Blogs

                                    </a>

                                    <a class="btn btn-info btn-sm" href="/Category/editCategory/@item.CategoryID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Edit

                                    </a>

                                    <a class="btn btn-success btn-sm" href="/Category/categoryBack/@item.CategoryID">

                                        <i class="fas fa-atom">

                                        </i>

                                        Active

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/Category/categoryDelete/@item.CategoryID">

                                        <i class="fas fa-trash">

                                        </i>

                                        Delete

                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>
        <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Add a new Category</button>
        <!-- /.card -->
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">New Category Panel</h2>
                    </div>
                    @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
                    {                       
                            <div class="modal-body">
                                <label>Category Name</label>
                                <input type="text" name="CategoryName" class="form-control" /><br />
                                <label>Category Description</label>
                                <input type="text" name="CategoryDescription" class="form-control" /><br />
                                <button type="submit" class="btn btn-info">Save</button>
                            </div>                        
                    }
                </div>
            </div>
        </div>
    </section>

</body>

</html>