@model IEnumerable<EntityLayer.Concrete.Comment>
@{
    ViewBag.Title = "GetCommentByBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Comment for blogs</h2>
<hr />
@foreach (var item in Model) {
<div class="row">
    <div class="col-md-12">
        <div class="timeline">
            <div class="time-label">
                <span class="bg-success">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</span>
            </div>
            <div>
                <i class="fas fa-comment bg-yellow"></i>
                <div class="timeline-item">
                    <h3 class="timeline-header"><a href="#">@item.UserName</a> @item.Mail</h3>
                    <div class="timeline-body">
                        @item.CommentText
                    </div>
                    <div class="timeline-footer">
                        <a class="btn btn-primary btn-sm">Read more</a>
                        <a class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</div>
}