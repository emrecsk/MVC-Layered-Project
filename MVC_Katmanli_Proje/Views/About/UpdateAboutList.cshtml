@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">
    <!-- Main content -->

    <section class="content">

        <div class="row">

            <div class="col-md-12">

                <div class="card card-primary">

                    <div class="card-header">

                        <h3 class="card-title">About Page Edit Page</h3>

                        <div class="card-tools">

                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                                <i class="fas fa-minus"></i>

                            </button>

                        </div>

                    </div>
                    @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
                    {
                        <div class="card-body">
                            @foreach (var item in Model)
                            {
                                <input type="hidden" value="@item.AboutID" name="AboutID" />
                                <div class="form-group">

                                    <label for="inputName">Image 1</label>

                                    <input type="text" name="AboutImage1" class="form-control" value="@item.AboutImage1">

                                </div>

                                <div class="form-group">

                                    <label for="inputName">Image 2</label>

                                    <input type="text" name="AboutImage2" class="form-control" value="@item.AboutImage2">

                                </div>

                                <div class="form-group">

                                    <label for="inputDescription">Content 1</label>

                                    <textarea name="AboutContent1" class="form-control" rows="4">@item.AboutContent1</textarea>

                                </div>

                                <div class="form-group">

                                    <label for="inputDescription">Content 2</label>

                                    <textarea name="AboutContent2" class="form-control" rows="4">@item.AboutContent2</textarea>

                                </div>

                            }
                            <button type="submit" class="btn btn-success">Update</button>
                        </div>
                    }
                    <!-- /.card-body -->

                </div>

                <!-- /.card -->

            </div>



        </div>



    </section>

</body>

</html>